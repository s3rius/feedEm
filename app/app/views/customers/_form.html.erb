<%= form_with(model: customer, local: true, html: {class: 'form'}) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <div class="notification is-primary">
        <button class="delete"></button>
        <%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:
        <ul>
          <% customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form">
    <div class="field">
      <div class="control has-icons-left has-icons-right">
        <%= form.text_field :username, class: "input is-medium", placeholder: "Username" %>
      </div>
    </div>

    <div class="field">
      <div class="control has-icons-left has-icons-right">
        <%= form.password_field :password, class: "input is-medium", placeholder: "Password" %>
      </div>
    </div>

    <div class="field">
      <div class="control has-icons-left has-icons-right">
        <%= form.password_field :password_confirmation, class: "input is-medium", placeholder: "Password confirmation" %>
      </div>
    </div>

    <div class="field">
      <div class="control has-icons-left has-icons-right">
        <%= form.text_field :name, class: "input is-medium", placeholder: "Name" %>
      </div>
    </div>

    <div class="field">
      <div class="control has-icons-left has-icons-right">
        <%= form.text_field :surname, class: "input is-medium", placeholder: "Surname" %>
      </div>
    </div>

    <div class="field is-grouped">
      <p class="control">
        <%= form.submit class: "button is-primary" %>
      </p>
      <p class="control">
        <%= link_to 'Back', customers_path, class: "button is-light" %>
      </p>
    </div>
  </div>
<% end %>
