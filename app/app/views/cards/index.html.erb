<f-title :title='"Cards"'></f-title>

  <table class="table is-fullwidth">
    <thead>
    <tr>
      <th>Customer</th>
      <th>Number</th>
      <th>Cvv</th>
      <th>Expire</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.customer %></td>
        <td><%= card.number %></td>
        <td><%= card.cvv %></td>
        <td><%= card.expire %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
</table>

  <br>

  <%= link_to 'New Card', new_card_path, class: "button is-primary" %>