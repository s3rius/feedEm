<div class="vue">
  <% if notice %>
    <f-snack :errors="['<%= notice %>']"></f-snack>
  <% end %>

  <f-navbar></f-navbar>
  <f-title :title='"Order items"'></f-title>

  <table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Order</th>
      <th>Merchandise</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.order %></td>
        <td><%= order_item.merchandise %></td>
        <td><%= order_item.quantity %></td>
        <td><%= link_to 'Show', order_item %></td>
        <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
        <td><%= link_to 'Destroy', order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order Item', new_order_item_path, class: "button is-primary" %>
</div>