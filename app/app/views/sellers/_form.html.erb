<%= form_with(model: seller, local: true) do |form| %>
  <% if seller.errors.any? %>
    <div id="error_explanation">
      <f-snack :errors="<%= seller.errors.full_messages.to_s %>"></f-snack>
    </div>
  <% end %>

  <div class="field">
    <div class="control has-icons-left has-icons-right">
      <%= form.text_field :name, class: "input is-medium", placeholder: "Name" %>
    </div>
  </div>


  <div class="field">
    <div class="control has-icons-left has-icons-right">
      <%= form.number_field :likes, class: "input is-medium", placeholder: "Likes" %>
    </div>
  </div>



  <div class="field">
    <div class="control has-icons-left has-icons-right">
      <%= form.number_field :dislikes, class: "input is-medium", placeholder: "Dislikes"%>
    </div>
  </div>


  <div class="field">
    <div class="control has-icons-left has-icons-right">
      <%= form.text_field :auth_token, class: "input is-medium", placeholder: "Token" %>
    </div>
  </div>

  <div class="field is-grouped">
    <p class="control">
      <%= form.submit class: "button is-primary" %>
    </p>
    <p class="control">
      <%= link_to 'Back', sellers_path, class: "button is-light" %>
    </p>
  </div>
<% end %>
